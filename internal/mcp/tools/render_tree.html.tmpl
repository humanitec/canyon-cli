{{define "T"}}
	<span class="{{ .class }}">{{ .name }}</span>
	{{ with .data }}
	<pre><code>{{ . }}</code></pre>
	{{ end }}
	<ol>
	{{ range .children}}
	<li>{{ template "T" . }}</li>
	{{ end }}
	</ol>
{{end}}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
</head>
<body>
	{{ template "T" .root }}
</body>
</html>
